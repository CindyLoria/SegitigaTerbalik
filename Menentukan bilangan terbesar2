#include <iostream>
using namespace std;
int main (){
  
    float bil1;
    float bil2;
    float bil3;
    cout<<"Input Bilangan Pertama : ";
    cin>>bil1;
    cout<<"Input Bilangan Kedua   : ";
    cin>>bil2;
    cout<<"Input Bilangan Ketiga  : ";
    cin>>bil3;
  
    float max; // penampung nilai terbesar
  
    if(bil1 >= bil2 && bil1 >= bil3){
        max = bil1;
        }
    else if(bil2 >= bil3){
        max = bil2;
        }
    else{
        max = bil3;
        }
  
    cout<<"Bilangan yang terbesar adalah : "<<max;
  
    return 0;  
    }
