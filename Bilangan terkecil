#include <iostream> // input header
using namespace std;
int main (){ // deklarasi fungsi

	//deklarasi tipe data untuk variabel bilangan  
    float bil1;
    float bil2;
    float bil3;
    
    //output dan imput bilangan yang akan dicari nilai terkecilnya
    cout<<"Input Bilangan Pertama : ";
    cin>>bil1;
    cout<<"Input Bilangan Kedua   : ";
    cin>>bil2;
    cout<<"Input Bilangan Ketiga  : ";
    cin>>bil3;
  
    float min; //penampung nilai terkecil
  
  	//percabangan if else if
    if(bil1 <= bil2 && bil1 <= bil3){
        min = bil1;
        }
    else if(bil2 <= bil3){
        min = bil2;
        }
    else{
        min = bil3;
        }
  
    cout<<"Bilangan terkecil adalah : "<<min;
  
    return 0;  
    }
