#include <conio.h>  
#include <iostream>  
#include <math.h>  
using namespace std;  
  
int main() {  
    int a, b;    
    int hasil;  
  
  
    cout << " Menghitung hasil a pangkat b" << endl << endl;  
    cout << " Masukkan nilai a = ";  
    cin >> a;  
    cout << endl << " Masukkan nilai b = ";  
    cin >> b;  
    hasil = pow(a, b);  
  
    cout << endl << " Hasil dari " << a << " pangkat " << b << " adalah " << hasil << endl;  
    getch();  
}  
